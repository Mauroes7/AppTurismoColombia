<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RatingBar
                    android:id="@+id/calificacion_ratingBar"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="18dp"
                    android:isIndicator="true"

                    android:max="5"
                    android:numStars="5"
                    android:rating="3"
                    android:stepSize="0.5" />

                <TextView
                    android:id="@+id/titulo_text_view"
                    style="@style/Texto_titulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/superman" />

                <ImageView
                    android:id="@+id/picture_image_view"
                    android:layout_width="178dp"
                    android:layout_height="142dp"

                    android:layout_gravity="center_horizontal"
                    android:layout_span="2"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/obelisco"
                    tools:ignore="ContentDescription" />

                <TableLayout
                    android:id="@+id/tableLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintBaseline_toTopOf="parent">


                    <TableRow
                        android:id="@+id/conjunto"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                    </TableRow>

                    <TableRow />

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView4"
                            style="@style/Texto_subtitulo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="16dp"
                            android:text="Sitio de Interes" />

                        <TextView
                            android:id="@+id/nombre_textview"
                            style="@style/Texto_normal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="Obelisco de Juan de la Cosa" />

                    </TableRow>

                    <TableRow>

                        <TextView
                            android:id="@+id/textView"
                            style="@style/Texto_subtitulo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:text="Altura:" />

                        <TextView
                            android:id="@+id/altura_textview"
                            style="@style/Texto_normal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:text="128 SNM" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:id="@+id/textView8"
                            style="@style/Texto_subtitulo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Tiempo" />

                        <TextView
                            android:id="@+id/time_textview"
                            style="@style/Texto_normal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="27 Â°C, viento del NE a 10 km/h, humedad del 90 %" />
                    </TableRow>


                </TableLayout>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>