<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titulo_text_view"
                style="@style/Texto_titulo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16"
                android:text="@string/superman" />

            <RatingBar
                android:id="@+id/calificacion_ratingBar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8"
                android:isIndicator="true"
                android:max="5"

                android:numStars="5"
                android:rating="3"
                android:stepSize="0.5"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"

                android:layout_marginTop="8dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/obelisco"
                tools:ignore="ContentDescription" />

            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBaseline_toTopOf="parent">


                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/textView5"
                        style="@style/Texto_subtitulo"
                        android:layout_width="112dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="16dp"
                        android:text="Descripcion" />

                    <TextView
                        android:id="@+id/descripcion_textview"
                        style="@style/Texto_normal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:text="Fue un navegante y cartógrafo español conocido por haber participado en la fundación de turbaco y en los siete de los primeros viajes a América. También por haber dibujado el mapa más antiguo conservado en el que aparece el continente americano." />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView4"
                        style="@style/Texto_subtitulo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="16dp"
                        android:text="Sitio de Interes" />

                    <TextView
                        android:id="@+id/nombre_textview"
                        style="@style/Texto_normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Obelisco de Juan de la Cosa" />

                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/textView"
                        style="@style/Texto_subtitulo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:text="Altura:" />

                    <TextView
                        android:id="@+id/altura_textview"
                        style="@style/Texto_normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:text="128 SNM" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/textView8"
                        style="@style/Texto_subtitulo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Tiempo" />

                    <TextView
                        android:id="@+id/time_textview"
                        style="@style/Texto_normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="27 °C, viento del NE a 10 km/h, humedad del 90 %" />
                </TableRow>


            </TableLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
